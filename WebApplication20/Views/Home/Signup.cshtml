<div style="height: 70vh;" class="row justify-content-center align-items-center">
    <div class="col-md-6 bg-light rounded-3 p-5">
        <h1>Signup</h1>
        <form method="post" action="/home/signup">

            <div class="form-group">
                <label for="name">Name:</label>
                <input id="name" type="text" class="form-control form-control-lg" placeholder="Name" name="name">
            </div>
            <div class="form-group">
                <label for="age">Age:</label>
                <input id="age" type="text" class="form-control form-control-lg" placeholder="Age" name="Age">
            </div>
            <div class="form-group">
                <label for="signup">Sign Up To Newsletter:</label>
                <input id="signup" type="checkbox" value="true" name="signuptonewsletter" />
            </div>
            <div class="d-grid gap-2 mt-3">
                <button disabled class="btn btn-primary">
                    <i style="font-size:50px" class="bi bi-sign-dead-end-fill"></i>
                    Sign Up
                    <i style="font-size:50px" class="bi bi-sign-dead-end-fill"></i>
                </button>
            </div>
        </form>
    </div>
</div>